# Dockerfile actualizado para PHP 8.2 con Apache
FROM php:8.2-apache

# Instalar dependencias necesarias para pdo_pgsql y Composer
RUN apt-get update && apt-get install -y \
    curl \
    libpq-dev \
    gcc \
    make \
    autoconf \
    libc-dev \
    pkg-config \
    unzip \
    git

# Instalar Composer
RUN curl -sS https://getcomposer.org/installer | php \
    && mv composer.phar /usr/local/bin/composer

# Instalar las extensiones necesarias de PHP
RUN docker-php-ext-install pdo pdo_pgsql

# Habilitar los m칩dulos de Apache necesarios
RUN a2enmod rewrite headers

# Copiar archivos de la aplicaci칩n al contenedor
COPY . /var/www/html/

# Crear y dar permisos al directorio de datos para im치genes y otros archivos
RUN mkdir -p /var/www/html/data && chown -R www-data:www-data /var/www/html/data

# Habilitar el sitio
RUN a2ensite 000-default.conf

# Exponer el puerto 80 para la aplicaci칩n web
EXPOSE 80

# Iniciar Apache en primer plano
CMD ["apache2-foreground"]
